<% if notice %>
  <div class="alert alert-success text-center" role="alert">
    <p style = "color: green" id="notice"><%= notice %></p>
  </div>
<%end%>

<div class="page-header">
 <%= link_to 'New Project', new_project_path, class: "btn btn-info pull-right col-sm-2" %>
 <h1>Projects</h1>
</div>


<table class="table">
  <thead>
    <tr>
        <th>
          <h4>Name</h4>
        </th>
    </tr>
  </thead>


  <tbody>
      <% @projects.each do |project| %>
      <tr>
        <td class = "col-md-2"><%= link_to "#{project.name}", project %></td>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>
