<%= form_tag signin_path html:{class:"form-horizontal col-md-12"} do |f| %>

  <div class = "well col-md-4 col-md-offset-4">
    <h1>Sign into gCamp</h1>

    <% if @sign_in_error %>
      <p>
        <div class= "text-danger">
          <%= @sign_in_error %>
        </div>
      </p>
    <% end %>
    
    <div class="form-group col-md-12">
      <%= label_tag :email, "Email", class: "col-xs-3" %>
      <div class="col-sm-12">
        <%= email_field_tag :email  %>
      </div>
    </div>

    <div class="form-group col-md-12">
      <%= label_tag :password, "Password", class: "col-xs-3"  %>
      <div class="col-sm-12">
        <%= password_field_tag :password %>
      </div>
    </div>

    <div class="form-group col-md-12">
      <div class="col-sm-10">
        <%= submit_tag "Sign in", class: "btn btn-default" %>
      </div>
    </div>
  </div>

<% end %>
