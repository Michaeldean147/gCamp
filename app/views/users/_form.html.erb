<%= form_for(@user, html:{class:"form-horizontal col-md-12"}) do |f| %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-xs-2" %>
    <div class="col-sm-4">
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-xs-2" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-xs-2" %>
    <div class="col-sm-4">
      <%= f.text_field :email, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-xs-2" %>
    <div class="col-sm-4">
      <%= f.password_field :password, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-xs-2" %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class:"btn btn-info" %>
      <button type="button" class="btn btn-default "><%= link_to 'Cancel', users_path %></button>
    </div>
  </div>

  <% if @edit %>
   <div class = "form-goup">
     <div class="well col-sm-offset-2 col-sm-4 ">
        <%= link_to 'Delete', @user , method: :delete, data: {confirm: "Are You Sure?"}, class: " col-sm-4 col-sm-offset-4 btn btn-danger" %>
     </div>
   </div>
  <% end %>


<% end %>
