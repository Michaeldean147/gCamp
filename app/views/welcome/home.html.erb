<div class="jumbotron"><h1>gCamp</h1>
<p>Your life, organized.</p>
</div>

<div class="row">
      <%= image_tag "4.jpg", class:"col-xs-6 col-md-4"%>
      <%= image_tag "5.jpg", class:"col-xs-6 col-md-4"%>
      <%= image_tag "6.jpg", class:"col-xs-6 col-md-4"%>
</div>
<br>

<div class ="row">
  
  <div class ="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Tasks</h3>
      </div>
      <div class="panel-body">
        Grouped by projects and list. Just the way you like'em
      </div>
    </div>
  </div>

  <div class ="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Documents</h3>
      </div>
      <div class="panel-body">
        <ul> <li>Upload</li> <li>Comment</li> <li>Revise</li> </ul>

      </div>
    </div>
  </div>

  <div class ="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Comments</h3>
      </div>
      <div class="panel-body">
        <ul>  <li>Comment on tasks and documents</li> <li>Get email notifications</li> </ul>
      </div>
    </div>
  </div>

</div>

<div>
  <% @quotes.each do |quote| %>
    <h4><%= quote[0] %></h4>
    <% quote[1].each do |person| %>
      <em><span class = "person"> <%= person %></span></em>
    <% end %>
    <br>
    <br>
  <% end %>
</div>
