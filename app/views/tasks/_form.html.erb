<% if @task.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger col-md-6 col-sm-offset-1">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
    <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>

<%= form_for(@task, html:{class:"form-horizontal col-md-12"}) do |f| %>


  <div class="form-group">
    <%= f.label :description, class: "col-xs-1" %>
    <div class="col-sm-4">
      <%= f.text_field :description, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "col-xs-1" %>
    <div class="col-sm-4">
      <%= f.date_field :due_date, class:"form-control" %>
    </div>
  </div>

  <% if @edit %>
    <div class="form-group">
      <div class="col-sm-2 col-sm-offset-1">
        <%= f.check_box :completed %>
        <%= f.label :completed %>
      </div>
    </div>
  <% end %>

  <div class="form-group ">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit class:"btn btn-info" %>
      <button type="button" class="btn btn-default "><%= link_to 'Cancel', tasks_path %></button>
    </div>
  </div>

<% end %>
