<% if notice %>
  <div class="alert alert-success text-center" role="alert">
    <p style = "color: green" id="notice"><%= notice %></p>
  </div>
<%end%>

<div class="page-header">
 <%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-info pull-right col-sm-2" %>
 <div class = " col-md-3 pull-right">
   <%= link_to 'All Tasks', status: "All" %>
   |
   <%= link_to 'Incomplete Tasks', status: "Incomplete" %>
 </div>
<h1><%= "Tasks for #{@project.name}"%></h1>

<ol class="breadcrumb">
<li><a href="/projects">Projects</a></li>
<li><%= link_to @project.name, project_path(@project) %></li>
</ol>

</div>


<table class="table">
  <thead>
    <tr>
        <th>
          <h4>Description</h4>
        </th>
        <th>
          <h4>Complete</h4>
        </th>
        <th>
          <h4>Due Date</h4>
        </th>
    </tr>
  </thead>


  <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td class = "col-md-2"><%= task.description %></td>
        <td class = "col-md-2"><%= task.completed %></td>
        <td class = "col-md-2"><%= task.due_date %></td>
        <td class = "pull-right"><%= link_to 'Show', project_task_path(@project, task), class: "btn btn-success" %>
        <%= link_to 'Edit', edit_project_task_path(@project, task), class: "btn btn-info" %>
        <%= link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>
