<div class="page-header">
 <%= link_to 'New Task', new_task_path, class: "btn btn-info pull-right col-sm-2" %>
 <h1>Tasks</h1>
</div>


<table class="table">
  <thead>
    <tr>
        <th><h4>Description</h4></th>
        <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td class = "col-md-10"><%= task.description %></td>
        <td><%= link_to 'Show', task, class: "btn btn-success pull-right " %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info pull-right " %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
